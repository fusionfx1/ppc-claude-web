---
interface TrustItem {
  icon: string;
  label: string;
}

const items: TrustItem[] = [
  { icon: 'shield', label: '256-bit SSL Encrypted' },
  { icon: 'clock', label: '2-Minute Application' },
  { icon: 'check', label: 'No Credit Impact' },
  { icon: 'star', label: 'Trusted Lender Network' },
];
---

<section class="py-6 bg-muted/50 border-y border-border/50" aria-label="Trust indicators">
  <div class="max-w-3xl mx-auto px-4">
    <ul class="flex flex-wrap justify-center gap-x-8 gap-y-3 text-sm text-muted-foreground list-none p-0 m-0" role="list">
      {items.map((item) => (
        <li class="flex items-center gap-2">
          {item.icon === 'shield' && (
            <svg class="w-5 h-5 text-trust" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
          )}
          {item.icon === 'clock' && (
            <svg class="w-5 h-5 text-trust" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          )}
          {item.icon === 'check' && (
            <svg class="w-5 h-5 text-trust" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          )}
          {item.icon === 'star' && (
            <svg class="w-5 h-5 text-trust" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
          )}
          <span class="font-medium">{item.label}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
