---
const steps = [
  {
    number: '1',
    title: 'Tell Us What You Need',
    description: 'Choose your loan amount and enter your ZIP code. Takes less than 30 seconds.',
    icon: 'edit',
  },
  {
    number: '2',
    title: 'Get Matched Instantly',
    description: 'Our network of lenders competes for your business. See your personalized options.',
    icon: 'search',
  },
  {
    number: '3',
    title: 'Choose Your Best Offer',
    description: 'Compare rates, terms, and monthly payments. Pick the one that fits your budget.',
    icon: 'thumbsup',
  },
];
---

<section class="py-12 sm:py-16 bg-background" aria-labelledby="how-heading">
  <div class="max-w-3xl mx-auto px-4">
    <h2 id="how-heading" class="text-2xl sm:text-3xl font-bold text-center text-foreground mb-10">
      How It Works
    </h2>

    <ol class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center list-none p-0 m-0" role="list">
      {steps.map((step) => (
        <li class="flex flex-col items-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center ring-2 ring-primary/20" aria-hidden="true">
            {step.icon === 'edit' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
            )}
            {step.icon === 'search' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            )}
            {step.icon === 'thumbsup' && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" /></svg>
            )}
          </div>
          <span class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-primary text-primary-foreground text-sm font-bold mb-2" aria-hidden="true">
            {step.number}
          </span>
          <h3 class="text-base font-semibold text-foreground mb-1">{step.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{step.description}</p>
        </li>
      ))}
    </ol>
  </div>
</section>
