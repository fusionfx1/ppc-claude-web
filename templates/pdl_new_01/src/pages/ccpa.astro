---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const title = "CA Privacy Rights | ElasticCredits";
---

<Layout title={title}>
    <Navbar />
    <main class="pt-32 pb-20 bg-background-alt min-h-screen">
        <div class="container-custom max-w-4xl">
            <div
                class="bg-white rounded-3xl p-10 md:p-16 shadow-premium border border-gray-100"
            >
                <h1 class="text-4xl md:text-6xl font-black text-primary mb-8">
                    CA Privacy <span
                        class="text-accent underline decoration-4 underline-offset-8"
                        >Rights</span>
                </h1>

                <div
                    class="prose prose-lg max-w-none text-charcoal-light space-y-8 font-medium"
                >
                    <p>
                        This California Privacy Notice supplements our Privacy
                        Policy and applies only to California residents under
                        the CCPA.
                    </p>

                    <h2 class="text-2xl font-black text-primary pt-4 text-left">
                        Your CCPA Rights
                    </h2>
                    <ul class="list-disc pl-6 space-y-4">
                        <li>
                            <strong>Right to Know:</strong> You can request to know
                            what personal information we collect about you.
                        </li>
                        <li>
                            <strong>Right to Delete:</strong> You can request that
                            we delete your personal information.
                        </li>
                        <li>
                            <strong>Right to Opt-Out:</strong> You can opt-out of
                            the sale of your personal information.
                        </li>
                    </ul>

                    <div
                        id="dns"
                        class="bg-red-50 p-8 rounded-2xl border border-red-100 mt-12"
                    >
                        <h2 class="text-2xl font-black text-primary mb-4">
                            Do Not Sell My Info
                        </h2>
                        <p>
                            To exercise your right to opt-out, please email <strong
                                class="text-primary font-bold"
                                >privacy@elasticcredits.com</strong
                            > with the subject "CCPA Opt-Out". We will process your
                            request within 15 business days.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
