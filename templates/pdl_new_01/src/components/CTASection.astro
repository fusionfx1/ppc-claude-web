---
import { ShieldCheck, ArrowRight } from "lucide-astro";
---

<section class="py-24 bg-white overflow-hidden">
    <div class="container-custom">
        <div
            class="relative bg-primary rounded-[3rem] p-10 md:p-24 text-center overflow-hidden shadow-premium"
        >
            <!-- Background Effects -->
            <div
                class="absolute top-0 right-0 w-full h-full bg-gradient-to-br from-white/10 to-transparent pointer-events-none"
            >
            </div>
            <div
                class="absolute -bottom-24 -left-24 w-96 h-96 bg-accent/20 rounded-full blur-[120px] pointer-events-none"
            >
            </div>

            <div class="relative z-10 max-w-3xl mx-auto space-y-12">
                <div
                    class="inline-flex items-center gap-3 px-6 py-3 bg-white/10 rounded-full border border-white/10 text-white backdrop-blur-sm"
                >
                    <ShieldCheck class="w-6 h-6 text-accent" />
                    <span class="text-xs font-black uppercase tracking-[0.2em]"
                        >Secure & Confidential Matching</span
                    >
                </div>

                <h2
                    class="text-4xl md:text-6xl font-black text-white leading-tight tracking-tight"
                >
                    Ready to get the <br class="hidden md:block" />
                    <span
                        class="text-accent underline decoration-4 underline-offset-[12px] decoration-accent/30"
                        >funding</span
                    > you need?
                </h2>

                <p
                    class="text-xl text-white/70 font-medium max-w-2xl mx-auto leading-relaxed"
                >
                    Join 500,000+ satisfied customers who found the right
                    financial solution through our vetted lender network.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-8 pt-6"
                >
                    <a
                        href="#apply"
                        class="btn btn-primary px-12 py-5 text-xl font-black uppercase tracking-widest group w-full sm:w-auto shadow-2xl hover:scale-105 active:scale-100 transition-all duration-300"
                    >
                        Apply Now
                        <ArrowRight
                            class="ml-3 w-7 h-7 group-hover:translate-x-2 transition-transform"
                        />
                    </a>
                    <a
                        href="/rates"
                        class="text-white font-bold hover:text-accent transition-all uppercase tracking-[0.2em] text-xs border-b-2 border-white/10 hover:border-accent pb-2"
                    >
                        View Rates & Terms
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
