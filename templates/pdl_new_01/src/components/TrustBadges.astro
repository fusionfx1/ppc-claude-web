---
import { ShieldCheck, Zap, Star, Clock } from "lucide-astro";
---

<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mt-12">
    <!-- Card 1: SSL -->
    <div
        class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 group hover:shadow-md transition-shadow"
    >
        <div
            class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center text-green-600"
        >
            <ShieldCheck class="w-6 h-6" />
        </div>
        <div class="flex flex-col">
            <span
                class="text-[10px] font-black text-charcoal/60 uppercase tracking-wider"
                >256-Bit SSL</span
            >
            <span class="text-sm font-black text-primary leading-tight"
                >Secured</span
            >
        </div>
    </div>

    <!-- Card 2: Instant -->
    <div
        class="bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 group hover:shadow-md transition-shadow"
    >
        <div
            class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-blue-600"
        >
            <Zap class="w-6 h-6" />
        </div>
        <div class="flex flex-col">
            <span
                class="text-[10px] font-black text-charcoal/60 uppercase tracking-wider"
                >Instant Process</span
            >
            <span class="text-sm font-black text-primary leading-tight"
                >No Impact</span
            >
        </div>
    </div>

    <!-- Card 3: Rating -->
    <div
        class="bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 group hover:shadow-md transition-shadow"
    >
        <div
            class="w-12 h-12 bg-yellow-50 rounded-full flex items-center justify-center text-yellow-600"
        >
            <Star class="w-6 h-6 fill-current" />
        </div>
        <div class="flex flex-col">
            <span
                class="text-[10px] font-black text-charcoal/60 uppercase tracking-wider"
                >Overall Rating</span
            >
            <span class="text-sm font-black text-primary leading-tight"
                >4.8 Stars</span
            >
        </div>
    </div>

    <!-- Card 4: Next-Day -->
    <div
        class="bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 group hover:shadow-md transition-shadow"
    >
        <div
            class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center text-green-600"
        >
            <Clock class="w-6 h-6" />
        </div>
        <div class="flex flex-col">
            <span
                class="text-[10px] font-black text-charcoal/60 uppercase tracking-wider"
                >Fast Transfer</span
            >
            <span class="text-sm font-black text-primary leading-tight"
                >Next-Day</span
            >
        </div>
    </div>
</div>
